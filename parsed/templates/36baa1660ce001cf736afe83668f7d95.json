{
  "components/halothemes/newsletter-popup": "<!-- Begin Halo Newsletter Popup -->\r\n<div id=\"halo-newsletter-popup\" class=\"hide\">\r\n    <div class=\"popup-overlay\"></div>\r\n    <div class=\"newsletter-popup-container\">\r\n        <div class=\"newsletter-popup-inner\">\r\n            <button title=\"Close\" type=\"button\" class=\"popup-close\" data-close-newsletter-popup>\r\n                <span aria-hidden=\"true\"><svg><use xlink:href=\"#icon-close\"></use></svg></span>\r\n            </button>\r\n            <div class=\"newsletter-left\">\r\n                <img class=\"lazyload\" src=\"{{cdn 'img/loading.svg'}}\" data-src=\"https://cdn11.bigcommerce.com/s-{{settings.store_hash}}/product_images/uploaded_images/{{theme_settings.newsletter_popup_img}}\" alt=\"Newsletter Image\">\r\n            </div>\r\n            <div class=\"newsletter-right\">\r\n                <h2 class=\"newsletter-heading\">{{theme_settings.newsletter_popup_heading_1}}</h2>\r\n                <p class=\"newsletter-sub-heading\">{{theme_settings.newsletter_popup_heading_2}}</p>\r\n                <div id=\"popupSubcribeForm\">\r\n                    <form class=\"form\" action=\"{{urls.subscribe.action}}\" method=\"post\" id=\"popupSubcribeFormSubmit\">\r\n                        <fieldset class=\"form-fieldset\">\r\n                            <input type=\"hidden\" name=\"action\" value=\"subscribe\">\r\n                            <input type=\"hidden\" name=\"check\" value=\"1\">\r\n                            <input type=\"hidden\" name=\"nl_first_name\" value=\"{{customer.name}}\"> \r\n                            <div class=\"form-field\">\r\n                                <div class=\"form-wrap\">\r\n                                    <input class=\"form-input\" id=\"nls_email\" name=\"nl_email\" type=\"email\" placeholder=\"{{lang 'newsletter.email_placeholder'}}\" aria-label=\"{{lang 'newsletter.email_placeholder'}}\">\r\n                                    <button type=\"submit\" class=\"btn-subcribe\" aria-label=\"Submit Button\">\r\n                                        <svg aria-hidden=\"true\">\r\n                                            <use xmlns:xlink=\"http://www.w3.org/1999/xlink\" xlink:href=\"#arrow-right-d\"></use>\r\n                                        </svg>\r\n                                    </button>\r\n                                </div>\r\n                            </div>\r\n                        </fieldset>\r\n                    </form>\r\n                </div>\r\n                <p class=\"newsletter-message\">{{theme_settings.newsletter_popup_message}}</p>\r\n                <div class=\"black-icons\">\r\n                    {{> components/common/social-links}}\r\n                </div>\r\n                \r\n            </div>\r\n        </div>\r\n    </div>\r\n</div>\r\n<!-- End Halo Newsletter Popup -->\r\n",
  "components/common/social-links": "{{#if social_media}}\r\n    <ul class=\"social-icons\">\r\n        {{#each social_media}}\r\n            <li class=\"socialLinks-item\">\r\n                {{#if display_name '===' 'google+'}}\r\n                    <a class=\"icon icon--google\" href=\"{{url}}\" target=\"_blank\" aria-label=\"Open {{display_name}} in a new tab\">\r\n                        <svg aria-label=\"{{display_name}}\"><use xlink:href=\"#icon-google\" /></svg>\r\n                    </a>\r\n                {{else}}\r\n                    <a class=\"icon icon--{{display_name}}\" href=\"{{url}}\" target=\"_blank\" aria-label=\"Open {{display_name}} in a new tab\">\r\n                        <svg aria-label=\"{{display_name}}\"><use xlink:href=\"#icon-{{display_name}}\" /></svg>\r\n                    </a>\r\n                {{/if}}\r\n            </li>\r\n        {{/each}}\r\n    </ul>\r\n{{/if}}\r\n"
}