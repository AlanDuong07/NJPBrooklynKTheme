{
  "components/account/messages-list": "<h3 class=\"account-heading\">{{lang 'account.messages.heading' }}</h3>\r\n\r\n<ul class=\"account-list\">\r\n    {{#if messages}}\r\n        {{#each messages}}\r\n        <li class=\"account-listItem\">\r\n            <div class=\"account-message\">\r\n                    <div class=\"account-orderStatus\">\r\n                        <span>{{date}}</span>\r\n                    </div>\r\n\r\n                    <h5 class=\"account-product-title {{#unless unread}}is-read{{/unless}}\">\r\n                        {{subject}}\r\n                    </h5>\r\n                    <p class=\"{{#unless unread}}is-read{{/unless}}\">\r\n                        {{#if is_reply}}\r\n                            {{lang 'account.messages.merchant_said' store_name=../../settings.store_name}}\r\n                        {{else}}\r\n                            {{lang 'account.messages.customer_said'}}\r\n                        {{/if}}\r\n                        {{message}}\r\n                    </p>\r\n            </div>\r\n        </li>\r\n        {{/each}}\r\n    {{else}}\r\n        <li class=\"alert alert-info\">\r\n            <div class=\"alertBox-column alertBox-icon\">\r\n                <icon glyph=\"ic-success\" class=\"icon\" aria-hidden=\"true\"><svg xmlns=\"http://www.w3.org/2000/svg\" width=\"24\" height=\"24\" viewBox=\"0 0 24 24\"><path d=\"M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z\"></path></svg></icon>\r\n            </div>\r\n            <p class=\"alertBox-column alertBox-message\">\r\n                <span>You currently have no message.</span>\r\n            </p>\r\n        </li>\r\n    {{/if}}\r\n</ul>\r\n"
}