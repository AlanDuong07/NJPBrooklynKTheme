{
  "components/halothemes/halo-login-popup": "<!-- BEGIN LOGIN POPUP -->\r\n<div id=\"halo-login-popup\" class=\"modal\" data-reveal>\r\n    <a href=\"#\" class=\"modal-close\" aria-label=\"{{lang 'common.close'}}\" role=\"button\">\r\n        <span aria-hidden=\"true\"><svg><use xlink:href=\"#icon-close\"></use></svg></span>\r\n    </a>\r\n    <div class=\"modal-body\">\r\n        <div class=\"text-left\">\r\n            <h3>{{lang 'login.heading'}}</h3>\r\n            <form class=\"login-popup\" id=\"loginForm\" action=\"{{settings.secure_base_url}}/login.php?action=check_login\" method=\"post\" name=\"mainLoginForm\">\r\n               <fieldset class=\"form-fieldset\">\r\n                    <div class=\"form-field\">\r\n                        <label class=\"form-label\" for=\"login_email\">{{lang 'login.field_email'}} <small>{{lang 'common.required' }}</small></label>\r\n                        <input class=\"form-input\" name=\"login_email\" id=\"login_email\" type=\"email\" placeholder=\"\">\r\n                    </div>\r\n                    <div class=\"form-field\">\r\n                        <label class=\"form-label\" for=\"login_pass\">{{lang 'login.field_password'}} <small>{{lang 'common.required' }}</small></label>\r\n                        <input class=\"form-input\" id=\"login_pass\" type=\"password\" name=\"login_pass\">\r\n                    </div>\r\n\r\n                    <p style=\"text-align: center;display: none;\" id=\"popup-loading\"><img src=\"{{cdn '/assets/img/vendor/jstree/throbber.gif'}}\"></p>\r\n                    <div class=\"form-actions\">\r\n                        <input type=\"submit\" class=\"btn btn-alt\" value=\"{{lang 'login.submit_value' }}\">\r\n                        <a href=\"{{urls.auth.create_account}}\" class=\"createAccount btn btn-primary\"><span>{{lang 'login.register'}}</span></a>\r\n                        <a class=\"forgot-password\" href=\"{{urls.auth.forgot_password}}\">{{lang 'login.forgot_password' }}</a>\r\n                    </div>\r\n                </fieldset>\r\n            </form>\r\n        </div>\r\n    </div>\r\n</div>\r\n<!-- END LOGIN POPUP -->"
}